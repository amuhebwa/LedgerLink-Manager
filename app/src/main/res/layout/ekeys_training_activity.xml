<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="20sp"
        android:text="Select Training Delivered"
        android:textSize="18sp"
        android:textStyle="bold" />

    <CheckBox
        android:id="@+id/dayone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="Day One : Introduction to eKeys"
        android:textSize="16sp" />

    <CheckBox
        android:id="@+id/daytwo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="Day Two : Phone And Mobile Money Usage"
        android:textSize="16sp" />

    <CheckBox
        android:id="@+id/daythree"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="Day Three : Airtel Weza Review"
        android:textSize="16sp" />

    <CheckBox
        android:id="@+id/dayfour"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="Day Four : eKeys Review"
        android:textSize="16sp" />

    <CheckBox
        android:id="@+id/dayfive"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="Day Five : Group Submission and sensitization"
        android:textSize="16sp" />

    <CheckBox
        android:id="@+id/daysix"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="Day Six : eKeys Assessment"
        android:textSize="16sp" />
</LinearLayout>